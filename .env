# --------------------------
# APP ENV
# --------------------------
NODE_ENV=development

# --------------------------
# DATABASE (DOCKER + LOCAL)
# --------------------------

# Prisma CLI (local machine) will use THIS
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/simplecrm?schema=public&sslmode=disable"

# Docker containers (app + worker) will use THIS
DATABASE_URL_DOCKER="postgresql://postgres:postgres@postgres:5432/simplecrm?schema=public&sslmode=disable"

POSTGRES_DB=simplecrm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# --------------------------
# REDIS
# --------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# --------------------------
# AUTH
# --------------------------
JWT_SECRET=your-jwt-secret-here
REFRESH_JWT_SECRET=your-refresh-secret-here

# --------------------------
# EMAIL / SMS
# --------------------------
SENDGRID_API_KEY=your-sendgrid-key-here
TWILIO_ACCOUNT_SID=your-twilio-sid-here
TWILIO_AUTH_TOKEN=your-twilio-token-here
TWILIO_SOURCE_NUMBER=your-twilio-number-here
